@page "/clients"

<PageTitle>Clients</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Clients" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@clients" TItem="Blazor.Web.Models.BlazorWeb.Client" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="LastName" Title="Last Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="Address" Title="Address">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="Number" Title="Number">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="DateCreated" Title="Date Created">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="DateDelete" Title="Date Delete">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="Active" Title="Active">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="DateModificated" Title="Date Modificated">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Blazor.Web.Models.BlazorWeb.Client" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="client">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, client)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
